.mx-auto.col-md-4.mt-xl-5.p-5.shadow-lg.bg-white.rounded
  %h4.my-1.py-1 アカウント登録
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field.my-1.py-1
      = f.label :お名前（本名）
      %br/
      = f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"
    .field.my-1.py-1
      = f.label :アカウントタイプ
      %br/
      = f.select :account_type, User.account_types.keys.map{|k| [I18n.t("activerecord.attributes.user.account_type.#{k}", locale: :ja), k]}, {}, {autofocus: true, class: "form-control"}
    .field.my-1.py-1
      = f.label :Eメール
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"
    .field.my-1.py-1
      = f.label :パスワード
      %br/
      = f.password_field :password, autocomplete: "new-password", placeholder: "#{@minimum_password_length}桁以上", class: "form-control"
    .field.my-1.py-1
      = f.label :パスワード（確認用）
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"
    .text-right.small
      = render "devise/shared/links"
    .actions.center-block.text-center.mt-xl-5.mb-2
      = f.submit "Create", class: "btn btn-primary w-100"

