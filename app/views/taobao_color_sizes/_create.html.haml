- if @order.taobao_color_size.present?
  - if @order.taobao_color_size.name.present?
    = link_to "#{@order.taobao_color_size.name}", edit_taobao_color_size_path(@order.taobao_color_size.id), remote: true, class: "btn btn-light pull-right edit-btn"
  - else
    = link_to "中国語で色・サイズなどを入力", edit_taobao_color_size_path(@order.taobao_color_size.id), remote: true, class: "btn btn-light pull-right edit-btn", style: "color: gray;", title: 'クリックして入力', data: { toggle: "tooltip", placement: "right", delay: { "show": 200, "hide": 100 }}
- else
  = link_to "中国語で色・サイズなどを入力", new_taobao_color_size_path(order_id: @order.id), remote: true, class: "btn btn-light pull-right edit-btn", style: "color: gray;", title: 'クリックして入力', data: { toggle: "tooltip", placement: "right", delay: { "show": 200, "hide": 100 }}

:javascript
  $(function(){
    $('.delete-btn').removeClass('disabled');
    $('.edit-btn').removeClass('disabled');
    $('.add-btn').removeClass('disabled');
  });
