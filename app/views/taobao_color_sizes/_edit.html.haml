= form_for(@taobao_color_size, url: taobao_color_size_path, remote: true) do |f|
  .form-inline
    = f.hidden_field :order_id, value: @taobao_color_size.order_id
    = f.text_field :name, class: "form-control w-100"
    .d-inline-block.p-1{style: "width: 60%;"}
      = f.submit "保存", class: "btn btn-primary save-btn btn-block btn-sm"
    .d-inline-block.p-1{style: "width: 40%;"}
      %button.btn.btn-default.border-primary.text-primary.btn-cancel.btn-block.btn-sm{:type => "button"} キャンセル

:javascript
  
  $('.btn-cancel').click(function() {
    $('.delete-btn').removeClass('disabled');
    $('.edit-btn').removeClass('disabled');
    $('.add-btn').removeClass('disabled');
    if (is_name_present){
      var a_tag_of_name_present = `<a class="btn btn-light text-left edit-btn" style="word-break: break-all;" data-remote="true" href="/taobao_color_sizes/${taobao_color_size_id}/edit">${taobao_color_size_name}</a>`;
      $(`#taobao_color_size-order_id-${order_id}`).html(a_tag_of_name_present);
      $('[data-toggle="tooltip"]').tooltip()
      $('[data-toggle="tooltip"]').on('click',function(){
        $(this).tooltip('hide');
      })
    } else {
      var a_tag_of_name_empty = `<a class="btn btn-light text-left edit-btn btn-block" style="color: gray;" title="" data-toggle="tooltip" data-placement="right" data-delay="{&quot;show&quot;:200,&quot;hide&quot;:100}" data-remote="true" href="/taobao_color_sizes/${taobao_color_size_id}/edit" data-original-title="クリックして入力">中国語で色・サイズなどを入力</a>`;
      $(`#taobao_color_size-order_id-${order_id}`).html(a_tag_of_name_empty);
      $('[data-toggle="tooltip"]').tooltip()
      $('[data-toggle="tooltip"]').on('click',function(){
        $(this).tooltip('hide');
      })
    }
  });
  $(function(){
    $('.delete-btn').addClass('disabled');
    $('.edit-btn').addClass('disabled');
    $('.add-btn').addClass('disabled');
  });
